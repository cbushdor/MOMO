
<html>
    <head>
        <img src="image/v9.jpg" name=animation>
        <script>
            var images = new Array(10);

            for (var i = 0;i < 10;i++) {
                document.writeln("hello" + i);
                images[i] new Image();
                images[i].src = "image/v" + i + ".jpg";
            }

            function animate()
            {
                document.writeln("hello");
                document.animation.src = images[frame].src;
                frame = (frame + 1) % 10;
                timeout_id = setTimeout("animate()",250);
            }

            var frame = 0;
            var timeout_id = null;
        </script>
    </head>
<body>
    <form>
        <input type=button value="Start" onclick="if (timeout_id == null) animate()">
        <input type=button value="Stop" onclick="if (timeout_id) clearTimeout(timeout_id) : timeout_id = null;">
        </form><><><><>vegetative_fog.jpg
    </body>
</html>